inherit gnome.org

DESCRIPTION="AIFF/WAV audio file library"
HOMEPAGE="http://www.68k.org/~michael/audiofile/"

PKG_NAMES="${PN} lib${PN}0 lib${PN}-devel"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]='--exclude=aclocal usr/bin/*.exe usr/share/'
PKG_CONTENTS[1]='usr/bin/*.dll'
PKG_CONTENTS[2]="usr/bin/${PN}-config usr/include/ usr/lib/ usr/share/aclocal/"

src_install() {
	cd ${B}
	cyginstall

	docinto api
	dodoc ${S}/docs/[as]f*
}
